---
import ActivityCard from "./activities-teaser/activity-card.svelte";

const activities = [
	{
		title: "Wandern",
		description: "Direkt vom Hotel in die Allgäuer Bergwelt",
		image: "https://images.unsplash.com/photo-1551632811-561732d1e306?w=600&h=800&fit=crop",
	},
	{
		title: "E-Bike Verleih",
		description: "Nachhaltig unterwegs mit Ladestation",
		image: "https://images.unsplash.com/photo-1571068316344-75bc76f77890?w=800&h=500&fit=crop",
	},
	{
		title: "Bergbahnen",
		description: "Kostenlos mit Bad Hindelang PLUS",
		image: "https://images.unsplash.com/photo-1483728642387-6c3bdd6c93e5?w=500&h=500&fit=crop",
	},
	{
		title: "Skifahren & Langlauf",
		description: "Pistenvergnügen im Winter",
		image: "https://images.unsplash.com/photo-1605540436563-5bca919ae766?w=600&h=800&fit=crop",
	},
	{
		title: "Bad Hindelang PLUS",
		description: "Das PLUS für Ihren Urlaub",
		image: "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&h=500&fit=crop",
	},
	{
		title: "Familienaktivitäten",
		description: "Spielplätze und Familienwanderwege",
		image: "https://images.unsplash.com/photo-1475503572774-15a45e5d60b9?w=500&h=500&fit=crop",
	},
];
---

<section class="bg-forest-900 py-20 md:py-28 lg:py-32">
	<div class="container mx-auto px-6">
		<!-- Header -->
		<div class="mb-12 text-center md:mb-16">
			<p class="text-sm font-medium uppercase tracking-wide text-forest-300">
				Aktivitäten im Allgäu
			</p>
			<h2 class="font-heading mt-3 text-3xl font-light text-white md:text-4xl lg:text-5xl">
				Sommer & Winter
			</h2>
			<p class="mx-auto mt-4 max-w-2xl text-white/70">
				Direkt am Südhang gelegen, mit Blick in die Allgäuer Natur – und den Möglichkeiten
				direkt vor der Tür.
			</p>
		</div>

		<!-- Masonry Grid -->
		<div
			class="grid auto-rows-[200px] grid-cols-1 gap-3 sm:grid-cols-2 md:auto-rows-[180px] md:grid-cols-3 md:gap-4"
		>
			<!-- Wandern - Tall (spans 2 rows) -->
			<div class="row-span-2">
				<ActivityCard
					client:visible
					title={activities[0].title}
					description={activities[0].description}
					image={activities[0].image}
					delay={0}
				/>
			</div>

			<!-- E-Bike Verleih - Wide (spans 2 columns) -->
			<div class="sm:col-span-2 md:col-span-2">
				<ActivityCard
					client:visible
					title={activities[1].title}
					description={activities[1].description}
					image={activities[1].image}
					delay={0.08}
				/>
			</div>

			<!-- Bergbahnen - Standard -->
			<div class="">
				<ActivityCard
					client:visible
					title={activities[2].title}
					description={activities[2].description}
					image={activities[2].image}
					delay={0.16}
				/>
			</div>

			<!-- Skifahren - Tall (spans 2 rows) -->
			<div class="row-span-2">
				<ActivityCard
					client:visible
					title={activities[3].title}
					description={activities[3].description}
					image={activities[3].image}
					delay={0.24}
				/>
			</div>

			<!-- Bad Hindelang PLUS - Wide (spans 2 columns) -->
			<div class="sm:col-span-2 md:col-span-1">
				<ActivityCard
					client:visible
					title={activities[4].title}
					description={activities[4].description}
					image={activities[4].image}
					delay={0.32}
				/>
			</div>

			<!-- Familienaktivitäten - Standard -->
			<div class="">
				<ActivityCard
					client:visible
					title={activities[5].title}
					description={activities[5].description}
					image={activities[5].image}
					delay={0.4}
				/>
			</div>
		</div>

		<!-- CTA -->
		<div class="mt-12 text-center md:mt-16">
			<a
				href="/activities"
				class="group inline-flex items-center gap-2 rounded-lg border border-forest-300/50 px-6 py-3 text-sm font-medium text-forest-100 transition-all duration-300 hover:border-forest-300 hover:bg-forest-300/10"
			>
				Alle Aktivitäten entdecken
				<svg
					class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
					stroke-width="2"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M17 8l4 4m0 0l-4 4m4-4H3"
					/>
				</svg>
			</a>
		</div>
	</div>
</section>
