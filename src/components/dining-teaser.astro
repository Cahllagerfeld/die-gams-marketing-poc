---
const offerings = [
	{
		title: "Restaurant",
		description: "Regionale Küche mit frischen Zutaten aus dem Allgäu",
	},
	{
		title: "Frühstück",
		description: "Reichhaltiges Buffet für den perfekten Start in den Tag",
	},
	{
		title: "GAMS N' ROSES",
		description: "Aperitifs, Cocktails und entspannte Abende",
	},
];
---

<section class="bg-warm-100 py-20 md:py-28 lg:py-32">
	<div class="container mx-auto px-6">
		<div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2 lg:gap-16">
			<!-- Large atmospheric image -->
			<div class="relative aspect-4/3 overflow-hidden rounded-xl lg:aspect-square">
				<img
					src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=800&h=800&fit=crop"
					alt="Restaurant Atmosphäre"
					class="h-full w-full object-cover"
					loading="lazy"
				/>
			</div>

			<!-- Content -->
			<div class="lg:py-8">
				<!-- Header -->
				<p class="font-medium text-forest-700">Genussmomente im Allgäu</p>
				<h2 class="font-heading mt-2 text-3xl text-gams-grey-900 md:text-4xl lg:text-5xl">
					Kulinarik & Genuss
				</h2>
				<p class="mt-4 text-gams-grey-600">
					Erleben Sie authentische Küche mit Liebe zum Detail und Respekt für regionale Zutaten.
				</p>

				<!-- Offerings list -->
				<div class="mt-8 space-y-6">
					{offerings.map((offering) => (
						<div class="border-l-2 border-forest-700 pl-4">
							<h3 class="font-heading font-semibold text-xl text-gams-grey-900">{offering.title}</h3>
							<p class="mt-1 text-sm text-gams-grey-600">{offering.description}</p>
						</div>
					))}
				</div>

				<!-- CTA -->
				<div class="mt-10">
					<a
						href="/dining"
						class="inline-flex items-center gap-2 rounded-lg bg-forest-700 px-6 py-3 font-medium text-white transition-colors hover:bg-forest-500"
					>
						Kulinarik entdecken
						<svg
							class="h-4 w-4"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
							stroke-width="2"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M17 8l4 4m0 0l-4 4m4-4H3"
							/>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
