---
import RoomCard from "./rooms-teaser/room-card.svelte";
import Button from "./ui/button.svelte";

const rooms = [
	{
		image: "https://images.unsplash.com/photo-1631049307264-da0ec9d70304?w=800&h=600&fit=crop",
		category: "Standard",
		tagline: "Gemütlich & Funktional",
		description: "Alles was Sie brauchen für einen erholsamen Aufenthalt in den Bergen.",
		href: "/rooms#standard",
	},
	{
		image: "https://images.unsplash.com/photo-1590490360182-c33d57733427?w=800&h=600&fit=crop",
		category: "Komfort",
		tagline: "Stilvoll & Geräumig",
		description: "Mehr Platz, mehr Komfort — ideal für längere Aufenthalte.",
		href: "/rooms#komfort",
	},
	{
		image: "https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?w=800&h=600&fit=crop",
		category: "Premium",
		tagline: "Exklusiv & Großzügig",
		description: "Unser Bestes: großzügige Räume mit erstklassiger Ausstattung.",
		href: "/rooms#premium",
	},
];
---

<section class="bg-warm-100 py-20 md:py-28 lg:py-32">
	<div class="mx-auto container px-6">
		<!-- Header -->
		<div class="mb-12 text-center">
			<h2 class="font-heading text-3xl text-gams-grey-900 md:text-4xl lg:text-5xl">
				Unsere Zimmer und Appartements
			</h2>
			<p class="mt-3 text-gams-grey-600">
				Wohnbeispiele für jeden Geschmack
			</p>
		</div>

		<!-- Room Cards Grid -->
		<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
			{rooms.map((room, index) => (
				<RoomCard
					client:visible
					image={room.image}
					category={room.category}
					tagline={room.tagline}
					description={room.description}
					href={room.href}
					delay={index * 0.15}
				/>
			))}
		</div>

		<!-- Footer CTA -->
		<div class="mt-12 text-center">
			<Button href="/rooms" variant="secondary" icon label="Alle Appartements ansehen" />
		</div>
	</div>
</section>
